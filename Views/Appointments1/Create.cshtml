@model WebApplication1.Models.Appointments

@{
    ViewData["Title"] = "Create";
}

<h1>Start Bookings</h1>

<h4>Appointments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientLastname" class="control-label"></label>
                <input asp-for="PatientLastname" class="form-control" />
                <span asp-validation-for="PatientLastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hospital" class="control-label"></label>
                <input asp-for="Hospital" class="form-control" />
                <span asp-validation-for="Hospital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
